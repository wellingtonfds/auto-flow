generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Car {
  id       Int    @id @default(autoincrement())
  licensePlate    String
  color    String
  brand    String
  history History[]
}

model Driver {
  id       Int    @id @default(autoincrement())
  name     String
  history History[]
}

model History {
  id       Int    @id @default(autoincrement())
  carId     Int
  driverId  Int
  startDate DateTime
  endDate   DateTime?
  reason   String
  car      Car    @relation(fields: [carId], references: [id])
  driver  Driver  @relation(fields: [driverId], references: [id])
}


